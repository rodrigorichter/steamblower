              <button type="button" class="btn btn-primary" id="user_submit_button">Get URLs</button>
              </div>
            </div>


            <textarea readonly id="urls" rows="8" cols="50">The screenshots URLs will appear here...</textarea>




          </div>
        </div>
      </div>

    </section>
