<%= javascript_pack_tag 'home' %>


<body>

  <header>
    <div id="logo">
      <h1>Steam Blower</h1>
    </div>
  </header>

  <main>
    <section>

      <div class="container">
        <div class="h-100 row align-items-center">
          <div class="col">

            <h2>Type the <a href="https://steamidfinder.com/" target="_blank">SteamID64</a> to get their screenshots</h2>
